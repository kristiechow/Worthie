{
  "name": "Worthie",
  "version": "1.0",
  "description": "Shopping Assistant!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/worthie16.png",
      "32": "images/worthie32.png",
      "48": "images/worthie48.png",
      "128": "images/worthie128.png"
    }
  },
  "icons": {
    "16": "images/worthie16.png",
    "32": "images/worthie32.png",
    "48": "images/worthie48.png",
    "128": "images/worthie128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
